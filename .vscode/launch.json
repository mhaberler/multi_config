{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "gdbtarget",
      "request": "attach",
      "name": "CDT developmemt-c3",
      "program": "${workspaceFolder}/build_dev/${command:espIdf.getProjectName}.elf",
      "initCommands": [
        "set remote hardware-watchpoint-limit 2",
        "mon reset halt",
        "maintenance flush register-cache",
        "thb app_main"
      ],
      "target": {
        "port": "3333"
      }
    },
    {
      "type": "gdbtarget",
      "request": "attach",
      "name": "CDT prod1-c3",
      "program": "${workspaceFolder}/build_prod1/${command:espIdf.getProjectName}.elf",
      "initCommands": [
        "set remote hardware-watchpoint-limit 2",
        "mon reset halt",
        "maintenance flush register-cache",
        "thb app_main"
      ],
      "target": {
        "port": "3333"
      }
    },
    {
      "type": "gdbtarget",
      "request": "attach",
      "name": "CDT prod2-s3",
      "program": "${workspaceFolder}/build_prod2/${command:espIdf.getProjectName}.elf",
      "initCommands": [
        "set remote hardware-watchpoint-limit 2",
        "mon reset halt",
        "maintenance flush register-cache",
        "thb app_main"
      ],
      "target": {
        "port": "3333"
      }
    },
    {
      "type": "gdb",
      "request": "attach",
      "name": "NativeDebug development",
      "target": "extended-remote :3333",
      "executable": "${workspaceFolder}/build_dev/${command:espIdf.getProjectName}.elf",
      "gdbpath": "${command:espIdf.getXtensaGdb}",
      "cwd": "${workspaceRoot}",
      "autorun": [
        "set remote hardware-watchpoint-limit 2",
        "mon reset halt",
        "maintenance flush register-cache",
        "thb app_main"
      ]
    },
    {
      "type": "gdb",
      "request": "attach",
      "name": "NativeDebug prod1",
      "target": "extended-remote :3333",
      "executable": "${workspaceFolder}/build_prod1/${command:espIdf.getProjectName}.elf",
      "gdbpath": "${command:espIdf.getXtensaGdb}",
      "cwd": "${workspaceRoot}",
      "autorun": [
        "set remote hardware-watchpoint-limit 2",
        "mon reset halt",
        "maintenance flush register-cache",
        "thb app_main"
      ]
    },
    {
      "type": "gdb",
      "request": "attach",
      "name": "NativeDebug prod2",
      "target": "extended-remote :3333",
      "executable": "${workspaceFolder}/build_prod2/${command:espIdf.getProjectName}.elf",
      "gdbpath": "${command:espIdf.getXtensaGdb}",
      "cwd": "${workspaceRoot}",
      "autorun": [
        "set remote hardware-watchpoint-limit 2",
        "mon reset halt",
        "maintenance flush register-cache",
        "thb app_main"
      ]
    }
  ]
}
